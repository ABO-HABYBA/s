<body>
    <div class="container">
        <h1>توليد الباركود</h1>
        <form id="barcodeForm">
            <input type="text" id="name" placeholder="الاسم" required>
            <input type="email" id="email" placeholder="البريد الإلكتروني" required>
            <input type="tel" id="phone" placeholder="رقم الهاتف" required>
            <input type="tel" id="mobile" placeholder="رقم الموبيل" required>
            <input type="text" id="address" placeholder="العنوان" required>
            <input type="url" id="website" placeholder="الموقع الإلكتروني">
            <input type="text" id="facebook" placeholder="فيس بوك">
            <input type="text" id="whatsapp" placeholder="واتس">
            <input type="text" id="x" placeholder="اكس">
            <input type="text" id="instagram" placeholder="انستجرام">
            <button type="button" onclick="generateBarcode()">توليد الباركود</button>
        </form>
        <svg id="barcode"></svg>
        <div class="download-buttons">
            <button id="downloadPNG" onclick="downloadBarcode('png')">تحميل كـ PNG</button>
            <button id="downloadJPG" onclick="downloadBarcode('jpg')">تحميل كـ JPG</button>
            <button id="downloadPDF" onclick="downloadBarcode('pdf')">تحميل كـ PDF</button>
        </div>
    </div>

    <script>
        function generateBarcode() {
            var formData = new FormData(document.getElementById('barcodeForm'));
            var data = '';
            formData.forEach((value, key) => {
                data += key + ': ' + value + '\\n';
            });
            JsBarcode("#barcode", data, {
                format: "CODE128",
                displayValue: true
            });
        }

        function downloadBarcode(format) {
            html2canvas(document.querySelector("#barcode")).then(canvas => {
                if (format === 'png' || format === 'jpg') {
                    var link = document.createElement('a');
                    link.download = 'barcode.' + format;
                    link.href = canvas.toDataURL('image/' + format);
                    link.click();
                } else if (format === 'pdf') {
                    var pdf = new jsPDF();
                    pdf.addImage(canvas.toDataURL('image/png'), 'PNG', 10, 10);
                    pdf.save('barcode.pdf');
                }
            });
        }
    </script>
